@model Livro
<div class="row justify-content-md-center">
    <form name="formularioLivro" asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Titulo">Titulo</label>
            <input asp-for="Titulo" id="titulo" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Autor">Autor</label>
            <input asp-for="Autor" id="autor" class="form-control"/>
        </div>
        <div>
            <label asp-for="Ano">Ano</label>
            <input asp-for="Ano" id="ano" />
        </div>
        <input type="submit" onclick="return validarLivro()" value="Salvar" class="btn btn-primary"/>
    </form>
</div>

<script src="../wwwroot/js/site.js"></script>